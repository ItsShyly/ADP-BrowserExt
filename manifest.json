{
    "manifest_version": 3,
    "name": "Automatic Download Path",
    "version": "1.0",
    "description": "Automatic Download Path Switcher",

    "icons": {
        "128": "icons/128.png"
    },

    "action": {
        "default_icon": "icons/128.png"
    },

    "background": {
        "service_worker": "js/background.js"
    },

    "options_page": "options.html",

    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },

    "permissions": ["downloads",  "storage"],

    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}
